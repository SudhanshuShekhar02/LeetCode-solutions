class Solution {
public:
    int maximumGap(vector<int>& nums) {
        int n=nums.size();
        sort(nums.begin(), nums.end());
        int gap=0;
        if(n<2)return 0;
        for(int i=1;i<n;i++){
            int diff=nums[i]-nums[i-1];

            if(diff>gap){
                gap=diff;
            }
        }
        return gap;
    }
};
