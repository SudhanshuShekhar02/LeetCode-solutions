class Solution {
public:
    bool isPossibleToSplit(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int n=nums.size();
        if(n%2!=0) return false;
        unordered_map<int, int> freq;
        for(auto n : nums){
            freq[n]++;
            if(freq[n]>2) return false;
        }
        return true;
    }
};
