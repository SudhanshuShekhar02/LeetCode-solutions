class Solution {
public:
    double minimumAverage(vector<int>& nums) {
        double min_avg = numeric_limits<double>::max();
        sort(nums.begin(), nums.end());
        int left=0;
        int right=nums.size()-1;

        while(left<=right){
            double avg=nums[left]+nums[right];
            avg=avg/2;
            min_avg=min(avg, min_avg);
            left++;
            right--;
        }
        return min_avg;
        
    }
};
