class Solution {
public:
    ListNode* deleteDuplicates(ListNode* head) {
        ListNode dummy(0);
        dummy.next = head;

        ListNode* prev = &dummy;

        while (head != NULL) {

            if (head->next != NULL && head->val == head->next->val) {
                int val = head->val;
                while (head != NULL && head->val == val) {
                    ListNode* temp = head;
                    head = head->next;
                    delete temp;
                }
                prev->next = head;
            } 
            else {
                prev = head;
                head = head->next;
            }
        }
        return dummy.next;
    }
};
